! urxvt

URxvt.termName:                rxvt-256color
URxvt*geometry:                110x35
URxvt.scrollstyle:             plain
Xft.dpi:                       96
Xft.antialias:                 true
Xft.hinting:                   true
Xft.rgba:                      rgb
Xft.hintstyle:                 hintslight
Xft.lcdfilter:                 lcddefault

URxvt*font:                    xft:FiraCode-Retina Mono:size=12
URxvt*boldFont:                xft:FiraCode-Retina Mono:size=12:style=bold
URxvt*italicFont:
URxvt*boldItalicFont:
URxvt.antialias:               true
URxvt.allow_bold:              true

URxvt*depth:                   32
URxvt*borderless:              1
URxvt*scrollBar:               false
URxvt*saveLines:               2000
URxvt.transparent:             true
URxvt*.shading:                10

! Meta modifier for keybindings
!URxvt.modifier:               super

!! perl extensions
URxvt.perl-ext:                default

! disable the stupid ctrl+shift 'feature'
URxvt.iso14755:                false
URxvt.iso14755_52:             false

Xcursor.theme:                 ComixCursors-Opaque-White
Xcursor.size:                  16

!urxvt color scheme:
URxvt*background:              #2B2B2B
URxvt*foreground:              #DEDEDE
URxvt*colorUL:                 #86a2b0

! black
URxvt*color0:                  #2E3436
URxvt*color8:                  #555753
! red
URxvt*color1:                  #CC0000
URxvt*color9:                  #EF2929
! green
URxvt*color2:                  #4E9A06
URxvt*color10:                 #8AE234
! yellow
URxvt*color3:                  #C4A000
URxvt*color11:                 #FCE94F
! blue
URxvt*color4:                  #3465A4
URxvt*color12:                 #729FCF
! magenta
URxvt*color5:                  #75507B
URxvt*color13:                 #AD7FA8
! cyan
URxvt*color6:                  #06989A
URxvt*color14:                 #34E2E2
! white
URxvt*color7:                  #D3D7CF
URxvt*color15:                 #EEEEEC
